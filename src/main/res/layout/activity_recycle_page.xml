<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    tools:context="com.example.zengersoong.uptilldawn.RecyclePage">
    <!-- A RecyclerView with some commonly used attributes -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tbslogan"
        android:id="@+id/imageTest"
        android:maxHeight="300dp"
        android:contentDescription="imageHolder"/>
    <TextView
        android:id="@+id/Instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageTest"
        android:gravity="center"
        android:text="Swipe to Add/Remove, Click to view map!"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Planner"
        android:id="@+id/dbBtn"
        android:layout_below="@id/Instructions"
        android:textColor="@color/colorPrimary"
        android:background="#E3F2FD"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:id="@+id/routeBtn"
        android:layout_below="@id/dbBtn"
        android:textColor="@color/colorPrimary"
        android:background="#E3F2FD"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/routeBtn"
        />
</RelativeLayout>

